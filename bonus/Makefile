SRC_FILE = main.c ft_check_error.c src/ft_memmove.c src/ft_strlen.c src/ft_strdup.c src/ft_strjoin.c src/ft_split.c src/ft_memcpy.c \
src/ft_strncmp.c src/get_next_line.c ft_child_process.c ft_here_doc.c

OBJ_FILE = $(SRC_FILE:.c=.o)

NAME = pipex

BLUE=\033[0;34m

GREEN=\033[0;32m

ORANG=\033[0;33m

RESET=\033[0m

CC = gcc

CFLAGS = -Wall -Werror -Wextra 

all :	$(NAME)
	@echo "$(BLUE) \
────────────────────────────────────────────────────────────────────────────\n\
─██████████████─██████████─██████████████─██████████████─████████──████████─\n\
─██░░░░░░░░░░██─██░░░░░░██─██░░░░░░░░░░██─██░░░░░░░░░░██─██░░░░██──██░░░░██─\n\
─██░░██████░░██─████░░████─██░░██████░░██─██░░██████████─████░░██──██░░████─\n\
─██░░██──██░░██───██░░██───██░░██──██░░██─██░░██───────────██░░░░██░░░░██───\n\
─██░░██████░░██───██░░██───██░░██████░░██─██░░██████████───████░░░░░░████───\n\
─██░░░░░░░░░░██───██░░██───██░░░░░░░░░░██─██░░░░░░░░░░██─────██░░░░░░██─────\n\
─██░░██████████───██░░██───██░░██████████─██░░██████████───████░░░░░░████───\n\
─██░░██───────────██░░██───██░░██─────────██░░██───────────██░░░░██░░░░██───\n\
─██░░██─────────████░░████─██░░██─────────██░░██████████─████░░██──██░░████─\n\
─██░░██─────────██░░░░░░██─██░░██─────────██░░░░░░░░░░██─██░░░░██──██░░░░██─\n\
─██████─────────██████████─██████─────────██████████████─████████──████████─\n\
────────────────────────────────────────────────────────────────────────────"
%.o : %.c
	@echo "$(ORANG)--------COMPILING $<"
	@$(CC) -c $< -o $@

$(NAME): $(OBJ_FILE)
	@$(CC) $(CFLAGS) $(OBJ_FILE) -o $(NAME)
clean:
	@rm $(OBJ_FILE)
	@echo "\n$(GREEN)----REMOVING OBJECT_FILES DONE----\n$(RESET)"

fclean:	clean
	@rm $(NAME)
	@echo "$(GREEN)------------REMOVE $(NAME)-----------"
re : fclean all

.PHONY : clean fclean all re
